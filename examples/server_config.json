{
    "mcpServers": {
        "CloudComputeInfo": {
            "command": "uv",
            "args": [
                "run",
                "--with",
                "mcp[cli]",
                "--with",
                "httpx",
                "--with",
                "pyyaml",
                "mcp",
                "run",
                "~/code/cloud-compute-mcp-server/main.py"
            ]
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "~/ref_code/"
            ]
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git"
            ]
        }
    }
}
